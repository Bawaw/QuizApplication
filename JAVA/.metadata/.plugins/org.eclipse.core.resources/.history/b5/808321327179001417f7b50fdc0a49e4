package controller;

import java.awt.event.MouseAdapter;

import javax.swing.JFrame;
import javax.swing.JPanel;

import domain.TestService;

public abstract class AbstractTestMouseAdapter extends MouseAdapter {
	private TestService service;
	private JFrame view;
	
	public AbstractTestMouseAdapter(TestService service){
		super();
		setService(service);
	}

	protected TestService getService() {
		return service;
	}

	private void setService(TestService service) {
		this.service = service;
	}

	public JFrame getView() {
		return view;
	}

	public void setView(JFrame view) {
		this.view = view;
	}
	
	public void setPanelAsContentForView(JPanel panel){
		getView().setContentPane(panel);
		getView().getContentPane().revalidate();
		getView().getContentPane().repaint();
		getView().pack();
	}
}
