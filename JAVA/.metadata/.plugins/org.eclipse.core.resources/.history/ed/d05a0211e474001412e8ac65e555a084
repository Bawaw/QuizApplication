package domain;

import java.util.HashSet;

public class LeastAskedQuestions extends ExercisePoolHandler implements
		QuestionSelectionbehaviour {

	public LeastAskedQuestions(ExercisePool exercisePool)throws DomainException {
		super(exercisePool);
	}
	
	@Override
	public HashSet<Exercise> selectQuestions(int amount) {
		return new HashSet<Question>(getExercisePool().subList(getExercisePool().getExercisePool().size() - LeastAskedQuestions.questions, getExercisePool().getExercisePool().size()));
		
	}

}
