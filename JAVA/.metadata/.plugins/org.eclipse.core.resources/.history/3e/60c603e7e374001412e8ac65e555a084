package domain;

import java.awt.List;
import java.util.HashSet;

public class LeastAskedQuestions extends ExercisePoolHandler implements
		QuestionSelectionbehaviour {

	public LeastAskedQuestions(ExercisePool exercisePool)
			throws DomainException {
		super(exercisePool);
	}

	@Override
	public List<Question> selectQuestions(int amount) {
		HashSet<Question> questions = new HashSet<Question>();

		return getExercisePool().getExercisePool().subList(
				getExercisePool().getExercisePool().size()
						- LeastAskedQuestions.questions,
				getExercisePool().getExercisePool().size());

	}

}
