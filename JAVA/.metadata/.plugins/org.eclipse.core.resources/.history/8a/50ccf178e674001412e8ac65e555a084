package domain;

import java.util.HashSet;
import java.util.Random;

public class RandomQuestions extends ExercisePoolHandler implements
		QuestionSelectionbehaviour {

	public RandomQuestions(ExercisePool exercisePool) throws DomainException {
		super(exercisePool);
	}

	@Override
	public HashSet<Exercise> selectQuestions(int amount) throws DomainException {
		if(getExercisePool().getExercisePool().size() < LeastAskedQuestions.questions)
			throw new DomainException("You need atleast: " + LeastAskedQuestions.questions + " questions before you can create an evaluation");
		Random r = new Random();
		HashSet<Exercise> retSet = new HashSet<Exercise>();
		
		for (int i = 0; i < QuestionSelectionbehaviour.questions; i++) 
			retSet.add(getExercisePool().getExercisePool().get(r.nextInt(getExercisePool().getExercisePool().size())));
		return retSet;
	}

}
