package domain;

import java.util.ArrayList;

public abstract class Question {
	private String question;
	private ArrayList<Answer> options;
	private Answer rightAnswer;
	private int time;
	
	public Question(String question,Answer rightAnswer,ArrayList<Answer> option,int time) {
		this.setQuestion(question);
		this.setOptions(option);
		this.setRightAnswer(rightAnswer);
		this.setTime(time);
	}

	
	
	public String getQuestion() {
		return question;
	}

	private void setQuestion(String question) {
		this.question = question;
	}

	public ArrayList<Answer> getOptions() {
		return options;
	}

	private void setOptions(ArrayList<Answer> options) {
		this.options = options;
	}

	public Answer getRightAnswer() {
		return rightAnswer;
	}

	private void setRightAnswer(Answer rightAnswer) {
		this.rightAnswer = rightAnswer;
	}

	public int getTime() {
		return time;
	}

	private void setTime(int time) {
		this.time = time;
	}
	
	
	
	

}
